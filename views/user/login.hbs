<div class="row">
  <div class="col-md-6 m-auto">
    <div class="container d-flex justify-content-center mt-5 pl-5">
      <form action="/login" class="w-50 mt-5" method="post">
        <h2 class="text-center">User Login</h2>

        <div class="form-group">

          <label>Email Address</label>

    


          <input type="email" class="form-control" name="Email" placeholder="Enter email" />
        </div>
        <div class="form-group">
          <label>Password</label>
          <input type="password" class="form-control" name="Password" placeholder="Password" />
        </div>
                          {{#if err}}
    <p id="msg" class="text-danger">Invalid Email or password</p>
{{/if}}
        <div class="d-flex justify-content-center w-100 mt-3">
          <a href="/signup">Create new account?</a>
          <button type="submit" class="btn btn-primary float-right ms-3">Login</button>
        </div>
      </form>

    </div>

  </div>
</div>